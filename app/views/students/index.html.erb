<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Students</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <tr class="table-primary">
          <td><%= student.name %></td>
          <td><%= student.age %></td>
          <td><%= link_to 'Show', student, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-success" %></td>
          <td><%= link_to 'Destroy', student, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Student', new_student_path %>

</div>
